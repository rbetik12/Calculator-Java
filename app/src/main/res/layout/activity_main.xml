<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <EditText
                    android:id="@+id/resultEquation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="end"
                    android:inputType="none"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="35sp" />

            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <EditText
                android:id="@+id/midResultEquation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="end"
                android:inputType="none"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonClearEverything"
                style="@style/UtilsButtonStyle"
                android:text="@string/buttonClearEverything" />

            <TextView
                android:id="@+id/buttonLeftPar"
                style="@style/NumberButtonStyle"
                android:text="@string/leftPar" />

            <TextView
                android:id="@+id/buttonRightPar"
                style="@style/NumberButtonStyle"
                android:text="@string/rightPar" />

            <ImageView
                android:id="@+id/buttonClear"
                style="@style/UtilsButtonStyle"
                android:scaleType="center"
                android:src="@drawable/ic_backspace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonSeven"
                style="@style/NumberButtonStyle"
                android:text="@string/seven" />

            <TextView
                android:id="@+id/buttonEight"
                style="@style/NumberButtonStyle"
                android:text="@string/eight" />

            <TextView
                android:id="@+id/buttonNine"
                style="@style/NumberButtonStyle"
                android:text="@string/nine" />

            <TextView
                android:id="@+id/buttonDivide"
                style="@style/FunctionButtonStyle"
                android:text="@string/divide" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonFour"
                style="@style/NumberButtonStyle"
                android:text="@string/four" />

            <TextView
                android:id="@+id/buttonFive"
                style="@style/NumberButtonStyle"
                android:text="@string/five" />

            <TextView
                android:id="@+id/buttonSix"
                style="@style/NumberButtonStyle"
                android:text="@string/six" />

            <TextView
                android:id="@+id/buttonMultiply"
                style="@style/FunctionButtonStyle"
                android:text="@string/multiply" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonOne"
                style="@style/NumberButtonStyle"
                android:text="@string/one" />

            <TextView
                android:id="@+id/buttonTwo"
                style="@style/NumberButtonStyle"
                android:text="@string/two" />

            <TextView
                android:id="@+id/buttonThree"
                style="@style/NumberButtonStyle"
                android:text="@string/three" />

            <TextView
                android:id="@+id/buttonMinus"
                style="@style/FunctionButtonStyle"
                android:text="@string/substrain" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonZero"
                style="@style/NumberButtonStyle"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/buttonPoint"
                style="@style/NumberButtonStyle"
                android:text="@string/buttonPoint" />

            <TextView
                android:id="@+id/buttonEquals"
                style="@style/UtilsButtonStyle"
                android:text="@string/equals" />

            <TextView
                android:id="@+id/buttonAdd"
                style="@style/FunctionButtonStyle"
                android:text="@string/add"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>